<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ses_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SES" />

        <TextView
            android:id="@+id/ses_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/time_background"
            android:padding="5dp"
            android:text="00:00"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dispatch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派遣" />

        <TextView
            android:id="@+id/dispatch_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/time_background"
            android:padding="5dp"
            android:text="00:00"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/entrusted_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="受託" />

        <TextView
            android:id="@+id/entrusted_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/time_background"
            android:padding="5dp"
            android:text="00:00"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/in_busi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社内業務" />

        <TextView
            android:id="@+id/in_busi_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/time_background"
            android:padding="5dp"
            android:text="00:00"
            android:textSize="18sp" />
    </LinearLayout>

</TableRow>
