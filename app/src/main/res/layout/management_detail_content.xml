<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/management_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_bright"
    android:paddingBottom="10dp"
    android:paddingTop="5dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <include
            android:id="@+id/management_view_1"
            layout="@layout/management_detail_1" />

        <include
            android:id="@+id/management_view_2"
            layout="@layout/management_detail_2" />

        <include
            android:id="@+id/management_view_3"
            layout="@layout/management_detail_3" />

    </TableLayout>

    <include
        android:id="@+id/management_view_4"
        layout="@layout/management_detail_4" />

</LinearLayout>
